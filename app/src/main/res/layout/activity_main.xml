<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Background for Top Area -->
    <View
        android:id="@+id/top_bar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Zone A: Top Scroller -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_scroller"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:clipToPadding="false"
            android:paddingHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/press_start_2p_regular"
            android:hint="::"
            android:gravity="center"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/lcd_screen_text_color"
            android:textColorHint="@color/lcd_screen_text_color_faded"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/top_scroller"
            app:layout_constraintStart_toStartOf="@+id/top_scroller"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/top_scroller" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Device Chassis Background -->
    <View
        android:id="@+id/device_chassis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/device_chassis_background"
        app:layout_constraintTop_toTopOf="@+id/lcd_screen"
        app:layout_constraintBottom_toBottomOf="@+id/controls_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Zone B: LCD Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lcd_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/lcd_screen_background"
        android:padding="12dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">

        <!-- Scanline Overlay -->
        <com.example.mp3launcher.ScanlineView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- LCD Top Status -->
        <ImageView
            android:id="@+id/playback_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pause"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/lcd_screen_text_color" />

        <TextView
            android:id="@+id/playback_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/press_start_2p_regular"
            android:text="STOP"
            android:textColor="@color/lcd_screen_text_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/playback_icon"
            app:layout_constraintStart_toEndOf="@+id/playback_icon"
            app:layout_constraintTop_toTopOf="@+id/playback_icon" />

        <LinearLayout
            android:id="@+id/status_bars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:text="VOL"
                    android:textColor="@color/lcd_screen_text_color"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/volume_status_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:text="BAT"
                    android:textColor="@color/lcd_screen_text_color"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/battery_status_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider_top"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/lcd_screen_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bars" />

        <!-- LCD Content -->
        <ImageView
            android:id="@+id/album_art"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:background="@color/lcd_screen_text_color"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_top" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android.orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/album_art"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/album_art"
            app:layout_constraintTop_toTopOf="@+id/album_art">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/zpix"
                android:maxLines="2"
                android:text="COMMON JASMINE..."
                android:textColor="@color/lcd_screen_text_color"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/zpix"
                android:maxLines="1"
                android:text="Jay Chou"
                android:textColor="@color/lcd_screen_text_color_faded"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#663e1b04"
            app:layout_constraintBottom_toTopOf="@+id/progress_text_current"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/progress_text_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/vt323_regular"
            android:text="0:00"
            android:textColor="@color/lcd_screen_text_color"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/progress_bar"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/progress_text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vt323_regular"
            android:text="5:01"
            android:textColor="@color/lcd_screen_text_color_faded"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_text_current"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:progressDrawable="@drawable/progress_bar_pixelated"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Zone C: Controls -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lcd_screen">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/control_panel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/control_panel_background"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_decoration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <ImageButton
                android:id="@+id/play_pause_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_play_button_background"
                android:padding="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/vol_down_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_control_button_background"
                android:src="@drawable/ic_volume_down" app:tint="#BDBDBD"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
                app:layout_constraintEnd_toStartOf="@+id/vol_up_button"
                app:layout_constraintBottom_toTopOf="@+id/prev_button"/>

            <ImageButton
                android:id="@+id/vol_up_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_control_button_background"
                android:src="@drawable/ic_volume_up" app:tint="#BDBDBD"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vol_down_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/next_button"/>

            <ImageButton
                android:id="@+id/prev_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_control_button_background"
                android:src="@drawable/ic_skip_previous" app:tint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/vol_down_button"
                app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
                app:layout_constraintEnd_toStartOf="@+id/next_button"
                app:layout_constraintBottom_toTopOf="@+id/rewind_button"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.4"/>

            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_control_button_background"
                android:src="@drawable/ic_skip_next" app:tint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/vol_up_button"
                app:layout_constraintStart_toEndOf="@+id/prev_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/ff_button"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.4"/>

            <ImageButton
                android:id="@+id/rewind_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_control_button_background"
                android:src="@drawable/ic_rewind" app:tint="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@+id/prev_button"
                app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
                app:layout_constraintEnd_toStartOf="@+id/ff_button"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/ff_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:background="@drawable/retro_control_button_background"
                android:src="@drawable/ic_fast_forward" app:tint="#BDBDBD"
                app:layout_constraintTop_toBottomOf="@+id/next_button"
                app:layout_constraintStart_toEndOf="@+id/rewind_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="VOL-"
                style="@style/ControlContainer.Label"
                app:layout_constraintBottom_toBottomOf="@+id/vol_down_button"
                app:layout_constraintStart_toStartOf="@+id/vol_down_button"
                app:layout_constraintEnd_toEndOf="@+id/vol_down_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="VOL+"
                style="@style/ControlContainer.Label"
                app:layout_constraintBottom_toBottomOf="@+id/vol_up_button"
                app:layout_constraintStart_toStartOf="@+id/vol_up_button"
                app:layout_constraintEnd_toEndOf="@+id/vol_up_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="PREV"
                style="@style/ControlContainer.Label"
                app:layout_constraintBottom_toBottomOf="@+id/prev_button"
                app:layout_constraintStart_toStartOf="@+id/prev_button"
                app:layout_constraintEnd_toEndOf="@+id/prev_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="NEXT"
                style="@style/ControlContainer.Label"
                app:layout_constraintBottom_toBottomOf="@+id/next_button"
                app:layout_constraintStart_toStartOf="@+id/next_button"
                app:layout_constraintEnd_toEndOf="@+id/next_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="REW"
                style="@style/ControlContainer.Label"
                app:layout_constraintBottom_toBottomOf="@+id/rewind_button"
                app:layout_constraintStart_toStartOf="@+id/rewind_button"
                app:layout_constraintEnd_toEndOf="@+id/rewind_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="FF"
                style="@style/ControlContainer.Label"
                app:layout_constraintBottom_toBottomOf="@+id/ff_button"
                app:layout_constraintStart_toStartOf="@+id/ff_button"
                app:layout_constraintEnd_toEndOf="@+id/ff_button"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/bottom_decoration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.example.mp3launcher.AudioVisualizerView
                android:id="@+id/audio_visualizer"
                android:layout_width="80dp"
                android:layout_height="32dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_border"
                android:gravity="end"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.15"
                    android:text="DIGITAL MEDIA SYSTEM"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-bold"
                            android:letterSpacing="0.1"
                            android:text="designed by "
                            android:textColor="#606060"
                            android:textSize="8sp"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/zpix"
                            android:letterSpacing="0.1"
                            android:text="xel"
                            android:textColor="#606060"
                            android:textSize="8sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/alphabet_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:alpha="0.0"
        android:background="@drawable/alphabet_indicator_background"
        android:fontFamily="@font/press_start_2p_regular"
        android:padding="8dp"
        android:textColor="@color/lcd_screen_bg_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="@+id/top_bar"
        app:layout_constraintTop_toTopOf="@+id/top_bar"
        tools:text="A" />

</androidx.constraintlayout.widget.ConstraintLayout>
