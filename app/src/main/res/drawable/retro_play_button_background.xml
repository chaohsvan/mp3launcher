<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/retro_play_button_pressed" />
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#000000"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <!-- Button face layer -->
            <item android:bottom="6dp" android:right="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="#9f3a00"/> <!-- Dimmer orange for default state -->
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>