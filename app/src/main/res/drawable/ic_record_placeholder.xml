<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Album background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3e1b04" />
            <size
                android:width="160dp"
                android:height="160dp" />
        </shape>
    </item>
    <!-- Record vinyl -->
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#1a0c02" />
        </shape>
    </item>
    <!-- Record label -->
    <item
        android:left="55dp"
        android:right="55dp"
        android:top="55dp"
        android:bottom="55dp">
        <shape android:shape="oval">
            <solid android:color="#d32f2f" />
        </shape>
    </item>
    <!-- Spindle hole -->
    <item
        android:left="75dp"
        android:right="75dp"
        android:top="75dp"
        android:bottom="75dp">
        <shape android:shape="oval">
            <solid android:color="#fe9c2f" />
        </shape>
    </item>
</layer-list>
